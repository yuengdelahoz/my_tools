#Homebrew
export PATH=/usr/local/bin:$PATH

# Latex
export PATH=/Library/TeX/texbin:$PATH

# Adding adb tools to the path
ADB_HOME=$HOME/Library/Android/sdk/platform-tools/
export PATH="$ADB_HOME:$PATH"

# Hide computer name and user name from terminal
#export PS1="\W \$"
export PS1='\[\e[32m\]\u:\w\[\e[0m\] '

# Enabling Colors in iterm
export CLICOLOR=1
export TERM=xterm-256color

# Importing bash_aliases
if [ -f ~/.bash/bash_aliases ]; then
    source ~/.bash/bash_aliases
fi

